<Page x:Class="SalesDataAnalysisApp.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Notifications Page">
    <Grid>
        <ListView x:Name="NotificationsList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Message}"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Timestamp}"/>
                    <GridViewColumn Header="Read" DisplayMemberBinding="{Binding IsRead}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>