<Window x:Class="SalesDataAnalysisApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="490" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="28" Margin="24">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Регистрация" FontSize="22" FontWeight="Bold" Foreground="#2D3748" Margin="0,0,0,18" HorizontalAlignment="Center"/>
                <!-- Имя пользователя -->
                <Grid Margin="0,0,0,12">
                    <TextBox x:Name="RegisterUsernameTextBox"
                             Height="36"
                             FontSize="15"
                             Padding="8,0,8,0"
                             Background="#f7fafc"
                             BorderBrush="#CBD5E1"
                             BorderThickness="1"
                             GotFocus="RegisterUsernameTextBox_GotFocus"
                             LostFocus="RegisterUsernameTextBox_LostFocus"
                             TextChanged="RegisterUsernameTextBox_TextChanged"/>
                    <TextBlock x:Name="UsernamePlaceholder"
                               Text="Имя пользователя"
                               Foreground="#A0AEC0"
                               FontSize="15"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
                <!-- Пароль -->
                <Grid Margin="0,0,0,12">
                    <PasswordBox x:Name="RegisterPasswordBox"
                                 Height="36"
                                 FontSize="15"
                                 Padding="8,0,8,0"
                                 Background="#f7fafc"
                                 BorderBrush="#CBD5E1"
                                 BorderThickness="1"
                                 PasswordChanged="RegisterPasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Пароль"
                               Foreground="#A0AEC0"
                               FontSize="15"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
                <!-- Роль -->
                <ComboBox x:Name="RoleComboBox"
                          Height="36"
                          FontSize="15"
                          Margin="0,0,0,12"
                          Background="#f7fafc"
                          BorderBrush="#CBD5E1"
                          BorderThickness="1">
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Moderator"/>
                    <ComboBoxItem Content="User" IsSelected="True"/>
                </ComboBox>
                <!-- Кнопка регистрации -->
                <Button Content="Зарегистрироваться"
                        Height="36"
                        Margin="0,8,0,0"
                        Background="#4299E1"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="RegisterButton_Click"/>
                <!-- Кнопка назад -->
                <Button Content="Назад"
                        Height="32"
                        Margin="0,8,0,0"
                        Background="#E2E8F0"
                        Foreground="#2D3748"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click"/>
                <!-- Статус регистрации -->
                <TextBlock x:Name="RegisterStatus"
                           Foreground="Red"
                           FontSize="13"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
